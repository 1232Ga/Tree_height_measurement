<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context=".ui.activities.SplashActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:gravity="center"
       android:layout_height="match_parent">
       <pl.droidsonroids.gif.GifImageView
           android:layout_width="match_parent"
           android:id="@+id/logogif"
           android:layout_marginStart="@dimen/margin_left_10dp"
           android:layout_marginEnd="@dimen/margin_right_10dp"
           android:src="@drawable/comp_new"
           android:layout_height="match_parent"/>

   </LinearLayout>

    <ImageView
        android:id="@+id/forestry_logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_button_width_100"
        android:visibility="gone"
        android:src="@drawable/forestry_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/version_apk"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/height_50dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>