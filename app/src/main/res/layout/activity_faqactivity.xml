                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/question_2"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_18sp" />

                            <LinearLayout
                                android:id="@+id/regulate2"
                                android:layout_width="@dimen/height_30dp"
                                android:layout_height="@dimen/height_30dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/down_img2"
                                    android:layout_width="@dimen/margin_10dp"
                                    android:layout_height="@dimen/margin_left_5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_down_triangle" />

                                <ImageView
                                    android:id="@+id/up_img2"
                                    android:layout_width="@dimen/margin_10dp"
                                    android:layout_height="@dimen/margin_left_5dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_up_triangle"
                                    android:visibility="gone" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/answer_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_10dp"
                            android:layout_marginEnd="@dimen/margin_top_40dp"
                            android:textSize="@dimen/text_size_16sp"

                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/answer_2"
                            android:textColor="@color/faq_text"
                            android:visibility="gone" />


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1dp"
                    android:layout_marginHorizontal="@dimen/margin_20dp"
                    android:layout_marginVertical="@dimen/margin_20dp"
                    android:layout_weight="1"
                    android:background="@color/view_line" />

                <LinearLayout
                    android:id="@+id/query_3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/margin_20dp"
                        android:paddingVertical="@dimen/margin_top_15dp">

                        <LinearLayout
