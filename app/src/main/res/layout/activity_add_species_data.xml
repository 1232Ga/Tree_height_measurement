<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.activities.AddSpeciesDataActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/margin_12dp">

            <ImageView
                android:id="@+id/back_arrow_img"

                android:layout_width="@dimen/height_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:src="@drawable/ic_arrow_back" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/add_tree"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/height_0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/add_species"
            android:layout_width="@dimen/width_30dp"
            android:layout_height="@dimen/height_30dp"
            android:layout_marginEnd="@dimen/margin_right_10dp"
            android:src="@drawable/ic_add"
            android:visibility="gone"
            app:tint="@color/icon_color" />

        <ImageView
            android:id="@+id/logout_btn"
            android:layout_width="@dimen/width_30dp"
            android:layout_height="@dimen/height_30dp"
            android:layout_marginEnd="@dimen/margin_right_10dp"
            android:src="@drawable/ic_logout"
            android:visibility="gone" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_top_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/capture_image"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/asterisk"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150dp"
                android:weightSum="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image1_lay"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_left_5dp"
                    android:layout_weight="0.5"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/enlarge1"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_margin="@dimen/margin_left_5dp"
                        android:src="@drawable/ic_enlarge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/paint1"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_marginBottom="@dimen/margin_left_5dp"
                        android:layout_marginEnd="@dimen/margin_left_5dp"                        android:src="@drawable/ic_annotation"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enlarge1" />

                    <ImageView
                        android:id="@+id/retake1"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_marginEnd="@dimen/margin_right_5dp"
                        android:src="@drawable/ic_retake"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/paint1" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image2_lay"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_left_5dp"
                    android:layout_weight="0.5"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />


                    <ImageView
                        android:id="@+id/enlarge2"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_margin="@dimen/margin_left_5dp"
                        android:src="@drawable/ic_enlarge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/paint2"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_marginBottom="@dimen/margin_left_5dp"
                        android:layout_marginEnd="@dimen/margin_left_5dp"
                        android:src="@drawable/ic_annotation"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enlarge2" />

                    <ImageView
                        android:id="@+id/retake2"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_marginEnd="@dimen/margin_right_5dp"
                        android:src="@drawable/ic_retake"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/paint2" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/image_placeholder2"

                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/height_150dp"
                    android:layout_margin="@dimen/margin_left_5dp"
                    android:layout_weight="0.5"
                    android:background="@color/camera_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_placeholder1"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/height_150dp"
                    android:layout_marginTop="@dimen/margin_top_10dp"
                    android:layout_weight="1"
                    android:background="@color/camera_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/image3_4_lay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150dp"
                android:visibility="gone"
                android:weightSum="1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image3_lay"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_left_5dp"
                    android:layout_weight="0.5"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/enlarge3"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_margin="@dimen/margin_left_5dp"
                        android:src="@drawable/ic_enlarge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/retake3"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_marginEnd="@dimen/margin_right_5dp"
                        android:src="@drawable/ic_retake"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enlarge3" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image4_lay"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_left_5dp"
                    android:layout_weight="0.5"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"

                        />


                    <ImageView
                        android:id="@+id/enlarge4"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_margin="@dimen/margin_left_5dp"
                        android:src="@drawable/ic_enlarge"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/retake4"
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_marginEnd="@dimen/margin_right_5dp"
                        android:src="@drawable/ic_retake"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/enlarge4" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <LinearLayout
                    android:id="@+id/image_placeholder4"

                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/height_150dp"
                    android:layout_margin="@dimen/margin_left_5dp"
                    android:layout_weight="0.5"
                    android:background="@color/camera_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_placeholder3"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/height_150dp"
                    android:layout_marginTop="@dimen/margin_top_10dp"
                    android:layout_weight="1"
                    android:background="@color/camera_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="@dimen/width_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:src="@drawable/ic_camera" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/name_of_species"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/asterisk"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/camera_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/species_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/select_species_small"
                    android:paddingStart="@dimen/margin_left_10dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/location"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/asterisk"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/camera_bg">

                <TextView
                    android:id="@+id/latlng"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789@#."
                    android:drawablePadding="@dimen/margin_top_5pt"
                    android:fontFamily="@font/montserrat_regular"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingStart="@dimen/margin_top_5pt"
                    android:paddingTop="@dimen/margin_top_10dp"
                    android:singleLine="true"
                    android:visibility="visible"
                    app:boxStrokeWidth="@dimen/boxstrrokewidth_0dp"
                    app:boxStrokeWidthFocused="@dimen/boxstrokefocused_0dp"
                    app:hintAnimationEnabled="true"
                    app:passwordToggleEnabled="false" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/height_feet_inch"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/empty"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="@dimen/height_0dp"
                    android:layout_weight="1" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:layout_weight="1"
                    android:background="@color/camera_bg"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <EditText
                        android:id="@+id/height"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".72"
                        android:background="@null"
                        android:drawablePadding="@dimen/margin_top_5pt"
                        android:fontFamily="@font/montserrat_regular"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:paddingStart="@dimen/margin_top_5pt"
                        android:singleLine="true"
                        android:visibility="visible"
                        app:boxStrokeWidth="@dimen/boxstrrokewidth_0dp"
                        app:boxStrokeWidthFocused="@dimen/boxstrokefocused_0dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".3"
                        android:thumb="@drawable/switch_thumb"
                        android:visibility="gone"
                        app:showText="true"
                        app:track="@drawable/switch_track" />

                    <LinearLayout
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/margin_right_5dp"
                        android:layout_marginVertical="@dimen/margin_2dp"
                        android:layout_weight=".28"
                        android:background="@drawable/login_back"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/height_type_feet"
                            android:layout_width="@dimen/width_0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin_2dp"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="@string/meter_small"
                            android:textSize="@dimen/text_size_14sp" />

                        <TextView
                            android:id="@+id/height_type_inch"
                            android:layout_width="@dimen/width_0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin_2dp"
                            android:layout_weight=".5"
                            android:gravity="center"
                            android:text="@string/inch"
                            android:textSize="@dimen/text_size_14sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/width_60dp"
                    android:layout_height="@dimen/width_60dp"

                    >

                    <ImageView
                        android:id="@+id/detect_height"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/height_btn_logo" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/no_of_tree"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/asterisk"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/camera_bg">

                <EditText
                    android:id="@+id/no_of_tree"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="0123456789"
                    android:drawablePadding="@dimen/margin_top_5pt"
                    android:fontFamily="@font/montserrat_regular"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingStart="@dimen/margin_top_5pt"
                    android:singleLine="true"
                    android:text="1"
                    android:visibility="visible"
                    app:boxStrokeWidth="@dimen/boxstrrokewidth_0dp"
                    app:boxStrokeWidthFocused="@dimen/boxstrokefocused_0dp"
                    app:hintAnimationEnabled="true"
                    app:passwordToggleEnabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/girth_cm_inch"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/asterisk"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/camera_bg"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/girth"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".75"
                    android:background="@null"
                    android:drawablePadding="@dimen/margin_top_5pt"
                    android:fontFamily="@font/montserrat_regular"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:paddingStart="@dimen/margin_top_5pt"
                    android:singleLine="true"
                    android:visibility="visible"
                    app:boxStrokeWidth="@dimen/boxstrrokewidth_0dp"
                    app:boxStrokeWidthFocused="@dimen/boxstrokefocused_0dp"
                    app:hintAnimationEnabled="true"
                    app:passwordToggleEnabled="false" />


                <androidx.appcompat.widget.SwitchCompat

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_right_5dp"
                    android:thumb="@drawable/switch_thumb"
                    android:visibility="gone"
                    app:showText="true"
                    app:track="@drawable/switch_track" />

                <LinearLayout
                    android:layout_width="@dimen/width_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/margin_right_5dp"
                    android:layout_marginVertical="@dimen/margin_2dp"
                    android:layout_weight=".25"
                    android:background="@drawable/login_back"
                    android:gravity="center_vertical"

                    android:weightSum="1">

                    <TextView
                        android:id="@+id/girth_type_cm"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_2dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/cm"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/girth_type_inch"
                        android:layout_width="@dimen/width_0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_2dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:text="@string/inch"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_light"
                    android:text="@string/name_of_block"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
